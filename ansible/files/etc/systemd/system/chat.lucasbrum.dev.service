[Unit]
Description=Next.js Bun Socket.io Service
After=network.target

[Service]
Type=simple
User=nginx
MemoryAccounting=true
MemoryHigh=512M
MemoryMax=1024M
WorkingDirectory=/var/www/chat.lucasbrum.dev
ExecStart=/home/nginx/.bun/bin/bun run start
ExecStop=/bin/kill -TERM $MAINPID
Restart=on-failure
RestartSec=10s

# Limitar tentativas de reinicialização para evitar falhas em cascata
StartLimitIntervalSec=60
StartLimitBurst=3

# Garantir que o serviço seja considerado "falho" se não iniciar corretamente
TimeoutStartSec=30s

# Configurações de segurança
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full

[Install]
WantedBy=multi-user.target